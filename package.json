{
	"name": "ink-text-input",
	"version": "3.3.0",
	"description": "Text input component for Ink",
	"license": "MIT",
	"repository": "vadimdemedes/ink-text-input",
	"author": {
		"name": "Vadim Demedes",
		"email": "vdemedes@gmail.com",
		"url": "github.com/vadimdemedes"
	},
	"main": "build",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"test": "xo && FORCE_COLOR=1 ava && npm run typecheck",
		"build": "babel src --out-dir=build",
		"prepare": "npm run build",
		"pretest": "npm run build",
		"typecheck": "tsc --noEmit --jsx react index.test-d.tsx"
	},
	"files": [
		"build",
		"index.d.ts"
	],
	"keywords": [
		"ink",
		"text",
		"input",
		"component",
		"jsx",
		"react",
		"stdin",
		"keypress",
		"search",
		"query"
	],
	"dependencies": {
		"chalk": "^3.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.1.2",
		"@babel/core": "^7.1.2",
		"@babel/plugin-proposal-class-properties": "^7.1.0",
		"@babel/preset-react": "^7.0.0",
		"@types/react": "^16.8.8",
		"@vdemedes/prettier-config": "^1.0.0",
		"ava": "^1.3.1",
		"babel-eslint": "^10.0.1",
		"delay": "^4.3.0",
		"eslint-config-xo-react": "^0.17.0",
		"eslint-plugin-react": "^7.11.1",
		"husky": "^4.2.5",
		"ink": "^3.0.0-3",
		"ink-testing-library": "^2.0.0",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"react": "^16.5.2",
		"sinon": "^7.2.7",
		"typescript": "^3.3.3333",
		"xo": "^0.24.0"
	},
	"peerDependencies": {
		"ink": "^2.0.0",
		"react": "^16.5.2"
	},
	"babel": {
		"plugins": [
			"@babel/plugin-proposal-class-properties"
		],
		"presets": [
			"@ava/stage-4",
			"@babel/preset-react"
		]
	},
	"xo": {
		"parser": "babel-eslint",
		"extends": [
			"xo-react"
		],
		"prettier": true,
		"rules": {
			"react/no-unused-prop-types": 0,
			"react/prop-types": 0,
			"unicorn/no-hex-escape": 0
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
